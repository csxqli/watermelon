*
    margin 0
    padding 0
    box-sizing border-box
    font-family 'PT Sans Narrow', sans-serif
    font-weight normal
    color #333
    outline none
    transition 100ms ease-in

body
    margin 0
    padding 0
    font-size 18px

code
    font-family 'PT Sans Mono', monospace

.Tabs
    .TabButtons
        background #333
        border-bottom 0.6rem solid #c33
        text-align right
        .TabButton
            padding 1rem
            color #999
            font-size 3rem
            font-weight bold
            cursor pointer
            display inline-block
            &:hover
                color #fff
        .Selected
            background #c33
            color #fff
            text-shadow #000 0 0 0.2rem

.Padding3
    padding 3rem 3rem 0 3rem

.Form
    font-size 1.8rem
    .Row
        display block
        margin-bottom 1.5rem

.Input
    padding 0.6rem
    border 0.1rem solid #ccc
    color #666
    font-size 1.8rem

.Button
    padding 0.6rem
    border 0.1rem solid #333
    cursor pointer
    background #666
    color #fff
    font-weight bold
    font-size 1.8rem
    text-shadow #000 0 0 0.2rem

.WalletAccountsList
    .Item
        display: inline-block
        padding 1rem 0.75rem
        margin 0 1rem 1rem 0
        border 0.1rem solid #ddd
        &:hover
            cursor pointer
            border 0.1rem solid #999
            background #eee
        .Name
            font-size 1.8rem
        .Address
            font-size 0.9rem
    .Selected
        cursor pointer
        border 0.1rem solid #999
        background #eee

.WalletAccountDetails
    .Back
        float right
        font-size 1rem
        color #999
        text-decoration underline
        cursor pointer
        &:hover
            color #666
    .Name
        font-size 3rem
    .Address
        font-size 1rem

.WalletAccountStages
    padding 1.5rem 0 0 0
    .Item
        display inline-block
        padding 0 1rem 0 0
        color #ccc
        cursor default
    .Current
        color #333

.WalletAccountActions
    padding 1rem 0 0 1.2rem
    .Item
        list-style square
        color #666
        .Link
            text-decoration underline
            color #c33
            cursor pointer
